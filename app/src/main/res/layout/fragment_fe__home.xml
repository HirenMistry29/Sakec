<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_80pxv"
            android:paddingBottom="@dimen/_30pxv"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250pxh"
                app:cardBackgroundColor="@color/white"
                >

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageslider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250pxh"
                    app:iss_period="3000"
                    app:iss_auto_cycle="true"
                    app:iss_delay="2000"
                    app:iss_corner_radius="0">

                </com.denzcoskun.imageslider.ImageSlider>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/upcoming_ev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENTS"
                android:paddingStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_20pxh"
                android:textColor="@color/box"
                android:fontFamily="@font/opensansbold"
                android:textSize="@dimen/_27pxh"
                android:gravity="top"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eventsrecyclerview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_200pxv"
                android:orientation="horizontal">


            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="@dimen/_370pxh"
                android:layout_height="@dimen/_40pxh"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OUR VISION"
                    android:textSize="@dimen/_25pxh"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/_20pxh"
                    android:paddingTop="5dp"/>
            </LinearLayout>
            <TextView
                android:background="@drawable/blue_line"
                android:layout_width="@dimen/_370pxh"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/our_vision"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:justificationMode="inter_word"
                android:padding="@dimen/_10pxh"
                android:fontFamily="@font/kumbhsans"/>

            <LinearLayout
                android:layout_width="@dimen/_370pxh"
                android:layout_height="@dimen/_40pxh"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20pxh"
                android:background="@drawable/border"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OUR MISSION"
                    android:textSize="@dimen/_25pxh"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/_20pxh"
                    android:paddingTop="5dp"/>
            </LinearLayout>
            <TextView
                android:background="@drawable/blue_line"
                android:layout_width="@dimen/_370pxh"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/our_mission"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:justificationMode="inter_word"
                android:padding="@dimen/_10pxh"
                android:fontFamily="@font/kumbhsans"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
