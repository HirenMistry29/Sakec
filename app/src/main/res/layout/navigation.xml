<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_176pxh"
    android:background="@color/box"
    android:orientation="horizontal"

    >
<!--    android:background="#A1091137"-->

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="@dimen/_150pxh"
        android:layout_height="@dimen/_150pxh"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="@dimen/_25pxh"
        android:paddingLeft="@dimen/_70pxh"
        android:paddingStart="@dimen/_10pxh"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="start"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/personname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/_30pxh"
        android:layout_marginEnd="@dimen/_80pxh"
        android:fontFamily="@font/kumbhsans"
        android:paddingStart="@dimen/_10pxh"
        android:paddingTop="@dimen/_60pxh"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="name"
        android:singleLine="false"
        android:textStyle="bold" />

</LinearLayout>