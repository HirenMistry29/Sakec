<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_160pxh"
    android:layout_height="@dimen/_200pxh"
    android:elevation="10dp"
    android:padding="@dimen/_20pxh"
    app:cardBackgroundColor="#2F494949"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"

    >

    <ImageView
        android:id="@+id/eventimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradient2"></ImageView>
   


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16pxh">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/Eventtitlehome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="textMultiLine"
                android:paddingStart="@dimen/_10pxh"
                android:text="event"
                android:textColor="@color/white"
                android:textSize="@dimen/_20pxh"
                android:textStyle="bold" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/line_1_shape" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15pxh"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10pxh"
                android:text="Date : "
                android:textColor="@color/white"
                android:textSize="@dimen/_12pxh"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:paddingStart="5dp"
                android:text="000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10pxh"
                android:text="Time : "
                android:textColor="@color/white"
                android:textSize="@dimen/_12pxh"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:paddingStart="5dp"
                android:text="000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10pxh"
                android:text="Venue : "
                android:textColor="@color/white"
                android:textSize="@dimen/_12pxh"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Venue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="000" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/Readmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_170pxh"
        android:text="Read More"
        android:textColor="@color/white"
        android:textSize="@dimen/_10pxh" />
</androidx.cardview.widget.CardView>